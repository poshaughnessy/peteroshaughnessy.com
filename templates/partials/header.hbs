<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{#if title}}
      <title>{{title}} - Peter O'Shaughnessy</title>
    {{else}}
      <title>Peter O'Shaughnessy</title>
    {{/if}}
    <meta name="description" content="Web developer especially interested in web APIs and the future of the web">
    <link rel="stylesheet" href="/styles/styles.css"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,400italic,700italic">
    <link rel="icon" href="/images/favicon.png" type="image/png">
    <link rel="alternate" type="application/rss+xml" title="RSS feed" href="https://peteroshaughnessy.com/rss.xml" />
    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@poshaughnessy">
    <meta name="twitter:creator" content="@poshaughnessy">
    {{#if title}}
      <meta name="twitter:title" content="{{title}}">
    {{else}}
      <meta name="twitter:title" content="Peter O'Shaughnessy">
    {{/if}}
    {{#if excerpt}}
      <meta name="twitter:description" content="{{excerpt}}">
    {{else}}
      <meta name="twitter:description" content="Web developer especially interested in web APIs and the future of the web">
    {{/if}}
    {{#if thumbnail}}
      <meta name="twitter:image" content="https://peteroshaughnessy.com{{thumbnail}}">
    {{/if}}
    <!-- TEMPORARY: for Sep 20th (https://digital.globalclimatestrike.net/) -->
    <script src="https://assets.digitalclimatestrike.net/widget.js" async></script>
  </head>
  <body>
    <header>
      <div>
        <div class="avatar-container">
          <a href="/"><img class="avatar" src="/images/peter-cartoon-circle.png" alt="Peter's cartoon avatar"/></a>
        </div>
        <div class="title-and-tagline-container">
          <h1><a href="/">Peter O'Shaughnessy</a></h1>
          <h2>Web technologies and browser-based experiments</h2>
        </div>
      </div>
      <nav>
        <ul>
          <li><a href="/"{{#equals path ''}} class="active"{{/equals}}>Blog</a></li>
          <li><a href="/projects/"{{#equals path 'projects'}} class="active"{{/equals}}>Projects</a></li>
          <li><a href="/talks/"{{#equals path 'talks'}} class="active"{{/equals}}>Talks</a></li>
          <li><a href="/about/"{{#equals path 'about'}} class="active"{{/equals}}>About</a></li>
        </ul>
      </nav>
    </header>
