{{> header}}
<div class="contents">
  <section id="blog-index" class="page">
    {{{ contents }}}
    <div class="blog-links">
      {{#each collections.posts}}
        {{!-- Hiding if no thumbnail was a cheating way to have a 'hidden' post, the one about my paternity leave --}}
        {{#if this.thumbnail}}
          <div class="blog-link">
            {{#if this.thumbnail}}
            <a class="thumbnail" href="{{#if this.url}}{{this.url}}{{else}}{{this.permalink}}{{/if}}" aria-label="{{#if this.site_name}}Read '{{this.title}}' post on {{this.site_name}}{{else}}Read '{{this.title}}' post{{/if}}">
              <img src="{{this.thumbnail}}" alt="" />
            </a>
            {{/if}}
            <div class="title-and-date">
              <h3><a href="{{#if this.url}}{{this.url}}{{else}}{{this.permalink}}{{/if}}">{{this.title}}</a></h3>
              <p class="date">{{formatDate this.date}}</p>
            </div>
            {{#if this.tags}}
            <p class="tags">
              {{#eachCommaSeparated this.tags}}
              <span>{{this}}</span>
              {{/eachCommaSeparated}}
            </p>
            {{/if}}
            {{#if this.excerpt}}
            <p class="excerpt">{{this.excerpt}}</p>
            {{/if}}
            {{#if this.site_name}}
            <p class="view-links"><span><a href="{{this.url}}">Read post on {{this.site_name}}</a></span></p>
            {{else}}
            <p class="view-links"><span><a href="{{this.permalink}}">Read post</a></span></p>
            {{/if}}
          </div>
        {{/if}}
      {{/each}}
    </div>
  </section>
</div>
{{> footer}}